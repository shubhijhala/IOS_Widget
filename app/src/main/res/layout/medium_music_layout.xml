<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_weight="1"
    android:id="@+id/llmusic"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cvWidgetMusic"
       android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:gravity="center"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/init_text_color"
            android:textSize="14sp"
            android:layout_weight="1"
            android:text="@string/play_music_from_any_apps_and_control_here" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:gravity="center_horizontal"
                android:textColor="@color/init_text_color"
                android:textSize="14sp"
                android:text="Place Holder" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivbavkword"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_fast_rewind_24"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivpause"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_pause_24"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivforward"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_fast_forward_24"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
</layout>